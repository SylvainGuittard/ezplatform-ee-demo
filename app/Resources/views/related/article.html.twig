<a href="{{ path('ez_urlalias', {'locationId': content.contentInfo.mainLocationId}) }}">
    <div class="col-xs-4">
        <div class="thumbnail related-article">
            {{ ez_render_field(content, 'image', {
                'parameters': {
                    'alias': 'related',
                    'class': 'img-responsive'
                }
            }) }}
            <div class="caption">
                <h3>{{ ez_content_name(content) }}</h3>
                <p>{{ ez_render_field(content, 'intro') }}</p>
            </div>
        </div>
    </div>
</a>
