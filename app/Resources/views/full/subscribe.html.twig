{% extends "::pagelayout.html.twig" %}

{% block content %}
    <section class="subscribe">
        {% if not ez_is_field_empty(content, 'image') %}
            {% set imageAlias = ez_image_alias(content.getField('image'), content.versionInfo, 'header') %}
            <div class="col-md-12 section-header" style="background-image: url('{{ imageAlias.uri }}');">
        {% else %}
            <div class="col-md-12 section-header">
        {% endif %}
                <div class="header-title">{{ ez_render_field(content, 'title') }}</div>
            </div>

        <div class="row">
            <div class="col-md-5 col-md-offset-1 subscribe-column">
                {{ ez_render_field(content, 'description') }}
            </div>
            <div class="col-md-5 subscribe-column">
                {{ form_start(form, {'attr': {'class': 'subscribe-form'}}) }}

                    <h1>{{ 'Sign up'|trans }}</h1>
                    {{ form_widget(form.email.first, { 'attr': {'placeholder': 'E-mail address'|trans }}) }}
                    {{ form_widget(form.email.second, { 'attr': {'placeholder': 'Confirm e-mail address'|trans }}) }}

                    <strong>{{ 'Personal information'|trans }}</strong>

                    {{ form_widget(form.firstName, { 'attr': {'placeholder': 'First name'|trans }}) }}
                    {{ form_widget(form.lastName, { 'attr': {'placeholder': 'Last name'|trans }}) }}


                    {{ form_widget(form.country, { 'attr': {'placeholder': 'Select country'|trans }}) }}

                    {{ form_widget(form.termsOfUse) }}
                    {{ form_label(form.termsOfUse, 'I agree to the terms of use and privacy'|trans) }}

                    {{ form_widget( form.save, { 'label': "Subscribe"|trans } ) }}
                {{ form_end(form) }}
            </div>
        </div>
    </section>
{% endblock %}
