<article class="grid-main">
    <a href="{{ path(location) }}">
        <div class="row">
            <div class="col-md-6">
                <div class="label">
                    <i>{{ 'Places'|trans }}</i>
                </div>

                <div class="place-meta">
                    <h5>{{ ez_content_name(content) }}</h5>
                    {{ ez_render_field(content, 'intro') }}
                </div>
            </div>
            <div class="col-md-6 thumb" style="background-image: url('{{ ez_field_value(content, 'image').uri }}');"> </div>
        </div>
    </a>
</article>
