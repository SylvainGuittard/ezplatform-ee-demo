<div class="col-xs-6 col-md-3">
    <a href="{{ ez_field_value(content, 'file') }}" title="{{ ez_content_name(content) }}">
        <div class="card thumbnail">
            <div class="card-image-placeholder">
                <h1>.{{ content.getField('file').value.fileName|split('.')|last }}</h1>
            </div>
            <div class="caption">
                <h3>{{ ez_content_name(content) }}</h3>
            </div>
        </div>
    </a>
</div>
