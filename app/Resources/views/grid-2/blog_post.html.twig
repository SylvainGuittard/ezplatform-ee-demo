<article class="grid-2 tastes-list-item-container">
    <a href="{{ path(location) }}">
        <div class="row">
            <div class="col-sm-12">
                {% set imageAlias = ez_image_alias(content.getField('image'), content.versionInfo, 'article_list') %}
                <div class="thumb" style="background-image: url('{{ imageAlias.uri }}');">
                    <i>{{ 'Blog'|trans }}</i>
                </div>
                <div class="blog-list-item-info">
                    <h5>{{ ez_content_name(content) }}</h5>
                    <div class="blog-list-item-description">
                        {{ ez_render_field(content, 'intro') }}
                    </div>
                </div>
            </div>
        </div>
    </a>
</article>
