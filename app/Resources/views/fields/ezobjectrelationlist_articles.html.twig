{% block ezobjectrelationlist_field %}
    {% spaceless %}
        {% if not ez_is_field_empty( content, field ) %}
            <div class="row">
                <div class="col-md-12 text-center"><h2>{{ 'Recommended articles'|trans }}</h2></div>
                {% for contentId in field.value.destinationContentIds %}
                    {{ render(controller('ez_content:viewAction', {
                        'contentId': contentId,
                        'viewType': 'related',
                        'noLayout': 1
                    })) }}
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock %}
