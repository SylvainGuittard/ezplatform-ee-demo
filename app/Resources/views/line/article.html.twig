<div class="col-xs-6 col-md-3 col-cuisine">
    <a href="{{ path(location) }}" title="{{ ez_field_value(content, 'title') }}">
        <div class="thumbnail cuisine">
            {% if not ez_is_field_empty(content, 'image') %}
                {{ ez_render_field(content, 'image', {
                    'parameters': {
                        'alias': 'cuisine',
                        'class': 'img-responsive'
                    }
                }) }}
            {% endif %}
            <div class="caption">
                <h3>{{ ez_field_value(content, 'title') }}</h3>
            </div>
    </div>
    </a>
</div>
