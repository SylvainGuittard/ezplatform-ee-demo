{% block content %}
    {% if not ez_is_field_empty( content, 'image') %}
        {% set imageAlias = ez_image_alias(content.getField('image'), content.versionInfo, 'blog_post_list') %}
    <section class="blog-post" style="background-image: url('{{ imageAlias.uri }}');">
    {% else %}
    <section class="blog-post">

    {% endif %}
        <a href={{ path(location) }} title="{{ ez_field_value(content, 'title') }}">
            <div class="blog-post-header">
                <h2 class="blog-post-title">{{ ez_render_field(content, 'title') }}</h2>
                <h3>by {{ ez_field_value(content, 'author') }}</h3>
                <p class="blog-post-date">{{ ez_field_value(content, 'publication_date')|localizeddate('medium', 'none', app.request.locale) }}</p>
            </div>
        </a>
    </section>
{% endblock %}
